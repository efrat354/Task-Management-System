<Window x:Class="PL.Engineer.EngineerWindow"
        DataContext="{Binding CurrentEngineer, RelativeSource={RelativeSource Self}, Mode=TwoWay}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        Title="EngineerWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="63,144,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="-0.149,0.464" Height="26"/>
        <TextBox IsEnabled="False" Text="{Binding CurrentEngineer[0].Id, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="216,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.183,-0.443" Height="22" />
        <Label Content="Email" HorizontalAlignment="Left" Margin="63,0,0,0" VerticalAlignment="Center" Width="114" RenderTransformOrigin="-0.149,0.464" Height="26"/>
        <Label Content="Experience" HorizontalAlignment="Left" Margin="63,262,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="-0.149,0.464" Height="26"/>
        <Label Content="Cost" HorizontalAlignment="Left" Margin="63,320,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="-0.149,0.464" Height="26"/>
        <Label Content="Id" HorizontalAlignment="Left" Margin="63,86,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="-0.149,0.464" Height="26"/>
        <TextBox Text="{Binding CurrentEngineer[0].Email, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="216,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.183,-0.443" Height="22"/>
        <TextBox Text="{Binding CurrentEngineer[0].Name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="216,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.183,-0.443" Height="22"/>
        <ComboBox ItemsSource="{Binding Source={StaticResource EnumsKey}}" SelectedValue="{Binding Level, Mode=TwoWay, NotifyOnValidationError=true, 
        ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="216,275,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox Text="{Binding CurrentEngineer[0].Cost, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" HorizontalAlignment="Left" Margin="216,333,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="22"/>
        <Button  
        HorizontalAlignment="Left" Margin="368,387,0,0" VerticalAlignment="Top" Height="32" Width="111" Click="btnAddUpdate_Click"/>

    </Grid>
</Window>
